package fxTableView;

import model.Vehicle;
import javafx.scene.control.TextArea;

public class EvaFormater {
	
	private TextArea view;
	private String info="";
	private Vehicle car;
	
	public EvaFormater(TextArea view){
		this.view = view;
	}
	
	private void settext(){
		view.clear();
		view.appendText(info);
	}
	
	public void setCar(Vehicle car){
		this.car = car;
		info = car.toString();
		settext();
	}
}
